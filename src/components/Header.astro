---
/*
  Header.astro
  Site navigation header with logo and nav links.
  Responsive: hamburger menu on mobile, horizontal nav on desktop.
*/

// Get the current page path to highlight active nav item
const currentPath = Astro.url.pathname;

// Navigation links - easy to add/remove pages here
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/shops', label: 'Shops' },
  { href: '/beans', label: 'Beans' },
  { href: '/map', label: 'Map' },
  { href: '/stats', label: 'Stats' },
  { href: '/about', label: 'About' },
];

// Helper to check if a link is active
function isActive(href: string): boolean {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
}
---

<header class="bg-warm-white border-b border-espresso/10">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">

      <!-- Logo / Site name -->
      <a href="/" class="font-heading text-2xl font-bold text-espresso hover:text-rust transition-colors">
        Coffee Journey
      </a>

      <!-- Desktop navigation (hidden on mobile) -->
      <ul class="hidden md:flex items-center gap-8">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class:list={[
                'font-body text-sm uppercase tracking-wide transition-colors',
                isActive(link.href)
                  ? 'text-rust font-semibold'      /* Active link style */
                  : 'text-charcoal hover:text-rust' /* Default link style */
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>

      <div class="flex items-center gap-2">
        <!-- Dark mode toggle button -->
        <button
          id="theme-toggle"
          class="p-2 text-espresso hover:text-rust transition-colors"
          aria-label="Toggle dark mode"
        >
          <!-- Sun icon (shown in dark mode → click to go light) -->
          <svg id="icon-sun" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <circle cx="12" cy="12" r="5" />
            <path stroke-linecap="round" d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42" />
          </svg>
          <!-- Moon icon (shown in light mode → click to go dark) -->
          <svg id="icon-moon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z" />
          </svg>
        </button>

        <!-- Mobile menu button (hidden on desktop) -->
        <button
          id="mobile-menu-button"
          class="md:hidden p-2 text-espresso hover:text-rust"
          aria-label="Open menu"
          aria-expanded="false"
        >
          <!-- Hamburger icon (3 horizontal lines) -->
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile navigation menu (hidden by default) -->
    <ul id="mobile-menu" class="hidden md:hidden mt-4 pb-4 space-y-3">
      {navLinks.map(link => (
        <li>
          <a
            href={link.href}
            class:list={[
              'block py-2 font-body text-sm uppercase tracking-wide transition-colors',
              isActive(link.href)
                ? 'text-rust font-semibold'
                : 'text-charcoal hover:text-rust'
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<!-- JavaScript for mobile menu + dark mode toggle -->
<script>
  // --- Mobile menu toggle ---
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
    menuButton.setAttribute('aria-expanded', String(!isExpanded));
  });

  // --- Dark mode toggle ---
  const themeToggle = document.getElementById('theme-toggle');
  const iconSun = document.getElementById('icon-sun');
  const iconMoon = document.getElementById('icon-moon');

  // Show the correct icon based on current theme
  function updateIcons() {
    const isDark = document.documentElement.classList.contains('dark');
    iconSun?.classList.toggle('hidden', !isDark);   // Sun shows in dark mode
    iconMoon?.classList.toggle('hidden', isDark);    // Moon shows in light mode
  }

  // Run on page load to sync icons
  updateIcons();

  themeToggle?.addEventListener('click', () => {
    // Toggle the dark class on <html>
    document.documentElement.classList.toggle('dark');

    // Save preference to localStorage
    const isDark = document.documentElement.classList.contains('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');

    // Update icons
    updateIcons();
  });
</script>
