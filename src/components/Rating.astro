---
/*
  Rating.astro
  Displays a star rating (1-5) using filled and empty stars.
  Props:
    - rating: number (1-5)
    - size: "sm" | "md" | "lg" (optional, defaults to "md")
*/

interface Props {
  rating: number;
  size?: 'sm' | 'md' | 'lg';
}

const { rating, size = 'md' } = Astro.props;

// Map size to CSS class for the star icons
const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-5 h-5',
  lg: 'w-6 h-6',
};

const starSize = sizeClasses[size];

// Create array of 5 items, marking which are filled
const stars = Array.from({ length: 5 }, (_, i) => i < rating);
---

<div class="flex items-center gap-0.5" aria-label={`Rating: ${rating} out of 5`}>
  {stars.map((filled) => (
    <svg
      class:list={[starSize, filled ? 'text-gold' : 'text-charcoal/20']}
      fill="currentColor"
      viewBox="0 0 20 20"
    >
      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
    </svg>
  ))}
</div>
