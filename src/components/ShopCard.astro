---
/*
  ShopCard.astro
  A card component for displaying a coffee shop preview.
  Used on: /shops listing page, home page featured section.
*/

import Rating from './Rating.astro';

interface Props {
  id: string;         // Slug used for the link URL
  name: string;
  city: string;
  country: string;
  rating: number;
  featuredImage: string;
  tags?: string[];
}

const { id, name, city, country, rating, featuredImage, tags } = Astro.props;
---

<a href={`/shops/${id}`} class="group block">
  <article class="bg-warm-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow">

    <!-- Shop image with hover zoom effect -->
    <div class="aspect-[4/3] overflow-hidden bg-espresso/10">
      <img
        src={featuredImage}
        alt={`${name} in ${city}`}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
        onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
      />
      <!-- Placeholder shown when image doesn't exist yet -->
      <div class="w-full h-full items-center justify-center bg-espresso/5 hidden" style="display: none;">
        <span class="text-4xl">â˜•</span>
      </div>
    </div>

    <!-- Card content -->
    <div class="p-5">
      <!-- Shop name -->
      <h3 class="font-heading text-xl font-bold text-espresso group-hover:text-rust transition-colors">
        {name}
      </h3>

      <!-- Location -->
      <p class="text-sm text-charcoal/60 mt-1">
        {city}, {country}
      </p>

      <!-- Rating stars -->
      <div class="mt-3">
        <Rating rating={rating} size="sm" />
      </div>

      <!-- Tags -->
      {tags && tags.length > 0 && (
        <div class="mt-3 flex flex-wrap gap-2">
          {tags.slice(0, 3).map(tag => (
            <span class="text-xs px-2 py-1 bg-sage/15 text-sage rounded-full">
              {tag}
            </span>
          ))}
        </div>
      )}
    </div>
  </article>
</a>
